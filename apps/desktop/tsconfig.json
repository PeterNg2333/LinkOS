{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@main/*": [
                "src/main/*"
            ],
            "@preload/*": [
                "src/preload/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}