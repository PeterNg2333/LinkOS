{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/renderer/src/*"],
            "@renderer/*": ["src/renderer/*"],
            "@preload/*": ["src/preload/*"],
            "@main/*": ["src/main/*"],
            "@common/*": ["src/common/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}